# $Id: Makefile.in,v 1.1 2004/04/02 10:42:13 krzyzak Exp $

prefix = @prefix@
datadir = @datadir@
mandir = @mandir@
exec_prefix = @exec_prefix@
bindir = @bindir@
libdir = @libdir@
libexecdir = @libexecdir@
includedir = @includedir@

MAKE = @MAKE@
INSTALL = @INSTALL@

#

all:	configure libgadu

libgadu:
	cd lib && $(MAKE) all

#

dep:	dep-libgadu

dep-libgadu:
	cd lib && $(MAKE) dep

#

configure:	configure.in m4/*
	./autogen.sh

#

install:	all install-libgadu

install-libgadu:
	cd lib && $(MAKE) install

#

uninstall:
	rm -f $(DESTDIR)$(libdir)/libgadu.{a,so*}
	rm -f $(DESTDIR)$(includedir)/libgadu{,-config,-stdint}.h


clean:	clean-libgadu

clean-libgadu:
	cd lib && $(MAKE) clean

#

distclean:	distclean-libgadu
	rm -f *~ config.log config.cache config.status config.h Makefile
	rm -f config.h.in configure aclocal.m4

distclean-libgadu:
	cd lib && $(MAKE) distclean

distdir:	
